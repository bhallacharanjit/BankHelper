<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:id="@+id/tv_bank_name"
                android:textColor="@color/whiteColor"
                android:textAlignment="center"
                android:text="HDFC Bank"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00000000000000"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="@color/whiteColor"
                android:textSize="18sp"
                android:id="@+id/tv_bank_account_no"
                android:layout_below="@id/tv_bank_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vasant Vihar Jalandhar"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="@color/whiteColor"
                android:id="@+id/tv_bank_location"
                android:textSize="16sp"
                android:layout_below="@id/tv_bank_account_no"/>



        </RelativeLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>